<apex:page showHeader="false" sidebar="false" standardStylesheets="false" applyBodyTag="false" applyHtmlTag="false">
    <ion-view title="Ionic Guide - Range">
        <ion-nav-buttons side="left">
            <button menu-toggle="left" class="button button-icon icon ion-navicon"></button>
        </ion-nav-buttons>
        <ion-content class="has-header">
            <div class="range">
                <i class="icon ion-volume-low"></i>
                <input type="range" name="volume" />
                <i class="icon ion-volume-high"></i>
            </div>
            
            <div class="list">
                <div class="item range range-positive">
                    <i class="icon ion-ios7-sunny-outline"></i>
                    <input type="range" name="volume" min="0" max="50" value="15" />
                    <i class="icon ion-ios7-sunny"></i>
                </div>
                <div class="item range range-calm">
                    <i class="icon ion-ios7-sunny-outline"></i>
                    <input type="range" name="volume" min="0" max="80" value="50" />
                    <i class="icon ion-ios7-sunny"></i>
                </div>
                <div class="item range range-balanced">
                    <i class="icon ion-ios7-sunny-outline"></i>
                    <input type="range" name="volume" min="30" max="100" value="70" />
                    <i class="icon ion-ios7-sunny"></i>
                </div>
            </div>
        </ion-content>
        <div class="bar bar-footer bar-positive">
            <div class="title">Force.com</div>
        </div>
    </ion-view>
</apex:page>